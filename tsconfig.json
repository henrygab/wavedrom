{
    // "$schema": "https://json.schemastore.org/tsconfig",
    // "display": "Node 16.11+ / IOS15+ / FF102+ / etc.",

    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "dist",
        // "rootDir": "lib",
        "sourceMap": true,
        "jsx" : "react",
        "moduleResolution": "Node",
        "alwaysStrict": true,
        "allowJs": true,
        "noImplicitAny": false,  // BUGBUG - goal is to enable this ... forces all variables to be typed

        "strict": true, // enables wide range of type-checking behavior
        "types" : [ "node" ],

        // "esModuleInterop": true,
        // "skipLibCheck": true,
        "declaration": true, // generate .d.ts files
        "declarationMap": true, // map .d.ts declarations back to source
        // "forceConsistentCasingInFileNames": true,

        // Do not set the following three, for consistency with Node.js module resolution
        // "baseUrl": "",
        // "paths": {},
        // "rootDirs": [],
    },

    "exclude": [
        // "bin",
        // "coverage",
        // "skins",
        // "test",
        "lib/archive",
        "dist/*",
        "dist/**/*",
        "node_modules",
        // "wavedrom*.js" // generated files in project root...
    ]

}